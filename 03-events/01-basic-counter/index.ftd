-- integer $count: 0

-- ftd.integer: $count
padding.px: 20
border-width.px: 2

-- ftd.text: increment counter
$on-click$: $increment($a = $count)

-- ftd.text: decrement counter
$on-click$: $decrement($a = $count)

-- ftd.text: component

-- integer increment(a):
integer $a:

a += 1

-- integer decrement(a):
integer $a:

a -= 1
